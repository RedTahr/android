<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <bitmap android:src="@drawable/ring_box"
            android:gravity="top" />
    </item>
    <item>
        <level-list>
            <item android:maxLevel="0">
                <layer-list>
                    <item android:top="75dp">
                        <bitmap android:src="@drawable/arrow_down"
                            android:gravity="top" />
                    </item>
                    <item android:top="30dp">
                        <bitmap android:src="@drawable/ring_outline_small"
                            android:gravity="top" />
                    </item>
                </layer-list>
            </item>
            <item android:maxLevel="1">
                <layer-list>
                    <item android:top="124dp">
                        <bitmap android:src="@drawable/ring_fill_small"
                            android:gravity="top" />
                    </item>
                </layer-list>
            </item>
        </level-list>
    </item>
</layer-list>
